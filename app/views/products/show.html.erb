<div class="product-page">
  <header class="product-header">
    <h1><%= @product.name %></h1>
    <p><%= @product.description %></p>
    <a href="<%= @product.url %>" class="btn btn-primary btn-lg" target="_blank">Â¡Go to!</a>
    <% if signed_in? && @product.user == current_user %> 
    <div class="actions">
      <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_product_path(@product) %>
      <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, @product, method: :delete, data: { confirm: "Are you sure to delete product?" } %>
    </div>
    <% end %>
  </header>

  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="votes">
          <h2>Votes</h2>

          <% @product.votes.each do |vote| %>
            <%= vote.user.email %>
          <% end %>
        </div>

        <div class="comments">
          <h2>Coments</h2>
        </div>
      </div>
    </div>
  </div>
</div>